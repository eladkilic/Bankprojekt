<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>



<BorderPane xmlns="http://javafx.com/javafx/22" 
	xmlns:fx="http://javafx.com/fxml/1" stylesheets="@styles.css">
	<top>
		<Text id="ueberschrift"  text="Ein Konto verÃ¤ndern"/>
	</top>
	
	<center>	
		<GridPane vgap="10">
		 	<padding>
		 		<Insets top="20" right="20" bottom="20" left="20"/>
		 	</padding>
		 
			 <Text text="Kontonummer: " styleClass="text" 
			 GridPane.columnIndex="0" GridPane.rowIndex="0"/>
			 
				 <Text fx:id="nummer" styleClass="text"
				 GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.halignment="RIGHT"/> 
			
			<Text text="Kontostand: " styleClass="text"
			GridPane.columnIndex="0" GridPane.rowIndex="1"/>
			
				<Text fx:id="stand" styleClass="text"
				GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="RIGHT"/>
			
			<Text text="Gesperrt: " styleClass="text"
			GridPane.columnIndex="0" GridPane.rowIndex="2"/>
			
				<CheckBox fx:id="gesperrt" 
				GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.halignment="RIGHT"/>
			
			<Text text="Adresse: " styleClass="text"
			GridPane.columnIndex="0" GridPane.rowIndex="3"/>
			
				<TextArea fx:id="adresse" prefColumnCount = "25" prefRowCount="2"
				GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.halignment="RIGHT"/>
			
			<Text fx:id="meldung" text="Willkommen lieber Benutzer" styleClass="text" fill="red"
			GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" GridPane.rowSpan="1"/>
		</GridPane>
	</center>
	
	<bottom>
		<HBox spacing="10.0" alignment="center">
			<TextField fx:id="betrag" text="100.00"/>
			
			<ChoiceBox fx:id="waehrung"/>
			<Button fx:id="einzahlen" text="Einzahlen"/>
			<Button fx:id="abheben" text="Abheben"/>
		</HBox>
	</bottom>
</BorderPane>
			
	